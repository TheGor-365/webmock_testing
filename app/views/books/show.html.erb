<p style="color: green">
  <%= notice %>
</p>

<%= render @book %>

<div class="btn-group">
  <%= link_to "Edit this book", edit_book_path(@book), class: 'btn btn-sm btn-outline-warning' %>
  <%= link_to "Back to books", books_path, class: 'btn btn-sm btn-outline-secondary' %>
  <%= button_to "Destroy this book", @book, method: :delete, class: 'btn btn-sm btn-outline-danger' %>
</div>
